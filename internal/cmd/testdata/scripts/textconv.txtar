# contents of file.txt
-- home/user/.config/chezmoi/chezmoi.yaml --
textconv:
- pattern: '**/*.txt'
  command: tr
  args:
  - a-z
  - A-Z
-- home/user/.local/share/chezmoi/file.txt --
# contents of file.txt
-- home/user/file.txt --
# previous contents of file.txt
