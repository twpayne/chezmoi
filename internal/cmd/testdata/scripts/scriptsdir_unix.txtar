# test that chezmoi apply runs scripts in .chezmoiscripts
exec chezmoi apply
cmp stdout golden/apply

chhome home2/user

# test that chezmoi apply fails if .chezmoiscripts contains a non-script
! exec chezmoi apply
stderr 'not a script'

chhome home3/user

