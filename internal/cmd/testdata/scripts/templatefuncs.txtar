#!/bin/sh

case "$1" in
"#ff0000")
    cat <<EOF
{
  "hex": {
    "rgb": "ff0000",
    "bgr": "0000ff",
    "r": "ff",
    "g": "00",
    "b": "00"
  },
  "rgb": {
    "r": 255,
    "g": 0,
    "b": 0
  },
  "dec": {
    "r": 1.000,
    "g": 0.000,
    "b": 0.000
  }
}
EOF
    ;;
*)
    echo "Usage: $0 <hex-color>"
    ;;
esac
