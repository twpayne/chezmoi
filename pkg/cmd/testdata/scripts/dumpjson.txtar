[!umask:022] skip

mksourcedir

exec chezmoi dump --format=json
cmp stdout golden/dump.json

exec chezmoi dump --format=json $HOME${/}.file
cmp stdout golden/dump-file.json

exec chezmoi dump --format=json $HOME${/}.dir
cmp stdout golden/dump-dir.json

exec chezmoi dump --format=json --recursive=false $HOME${/}.dir
cmp stdout golden/dump-dir-non-recursive.json

! exec chezmoi dump $HOME${/}.inputrc
stderr 'not managed'

